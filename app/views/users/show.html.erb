<div id="user-show">
  <p id="notice"><%= notice %></p>
  <div id="sidebar" class="col-md-4">
    <div id="bio">
      <h3> Bio </h3>
      <p>
        <strong>Name:</strong>
        <%= @user.name %>
      </p>

      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>
      <% unless current_user?(@user) %>
        <div id="follow_button">
        <% if current_user.following?(@user) %>
          <%= render 'unfollow' %>
        <% else %>
          <%= render 'follow' %>
        <% end %>
        </div>
      <% end %>
      <footer id="connections">
        <aside id="following">
          <a href="<%= following_user_path(@user) %>">
            <header>Following</header><footer><%= @user.followers.count %></footer>
          </a>
        </aside>
        <aside id="followers">
          <a href="<%= followers_user_path(@user) %>">
            <header>Followers</header><footer><%= @user.following.count %></footer>
          </a>
        </aside>
      </footer>
    </div>
    <div id="portfolio">
      <h3> Portfolio </h3>
      <ul>
        <% @userstocks.each do |s| %>
          <li><span class="company"><%= Stock.find(s.stock_id).ticker %></span></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div id="userposts" class="col-md-8">
    <h3> My Posts </h3>
    <ul>
      <% @userposts.each do |p| %>
        <li><span class="company"><h4><%= Stock.find(p.stock_id).company %></h4></span>
           <%= p.content %> </li>
      <% end %>
    </ul>
  </div>
</div>
