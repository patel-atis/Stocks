<p id="notice"><%= notice %></p>

<h1>Public Companies</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Ticker</th>
      <th>Price</th>
      <th>Dividend</th>
      <th>Type</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.company %></td>
        <td><%= stock.ticker %></td>
        <td><%= stock.price %></td>
        <td><%= stock.dividend %></td>
        <td><%=if stock.type; "Preffered"; else; "Common"; end%></td>
        <td><%= stock.rating %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

